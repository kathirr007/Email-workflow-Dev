doctype html
html
    head
        title One | Email template!

        //- import css/scss stylesheets
        //- these file names will be replace by gulp with proper css file paths
        link(rel="stylesheet", href="../../sass/basic.scss")
        link(rel="stylesheet", href="../../sass/one/styles.scss")

        //- embdedded css allowed, but not sass
        style.
            .bg-red{
                background-color: #E84C50;
            }
            .bg-blue {
                background-color: #7c22c9;
            }
            .full-width{
                width: 100%;
            }
    body
        // Yahoo Wrapper start
        table.wrapper-table(cellspacing="0" cellpadding="0" border="0" width="100%")
            tr
                td(align="center")
                    // Gmail Wrapper start
                    table.content-table(cellpadding="0", cellspacing="0" width="680")
                        tbody
                            // Pre headder start
                            tr
                                td(align="center" valign="middle")
                                    table(cellpadding="0" cellspacing="0" border="0" width="100%")
                                        tr
                                            td.bg-blue.text-center(style="color: white;")
                                                | Pre header copy bootiful
                                        tr
                                            td
                                                img(src="images/gray-rnd-crnr-bottom-left.png")
                            // Pre-header end
                            tr
                                td
                                    a(href="/")
                                        img.full-width(src="https://media.giphy.com/media/6o9Q2WehOHWI1QGO08/giphy.gif")
                            tr
                                td
                                    table(cellpadding="0" cellspacing="0" border="0" width="100%")
                                        tr
                                            td(align="center" valign="middle") Table cell text
